@model IEnumerable<SEP_FingerPrint.Models.DiemDanh>
@{
    ViewBag.Title = "Sửa điểm danh";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (Session["ID"] != null)
    {
        if (Convert.ToInt32(Session["Role"]) == 2)
        {
            Response.Redirect("~/Admin/AddUser");
        }
    }
    else
    {
        Response.Redirect("~/Home/Login");
    }
}
<head>

</head>
<div class="page-wrapper">
    <!-- Bread crumb -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-primary">Sửa điểm danh</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active">...</li>
                <li class="breadcrumb-item active">...</li>
            </ol>
        </div>
    </div>
    <!-- End Bread crumb -->
    <!-- Container fluid  -->
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="card">
            <div class="row">
                <div class="col-lg-12">
                    <p class="card-title">Lớp: </p>
                    <hr />
                    <table class="table table-hover table-bordered dataTable">
                        <thead>
                            <tr>
                                <th style="text-align: center">MSV</th>
                                <th>Họ</th>
                                <th>Tên</th>
                                <th>Ngày sinh</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {

                            <tr style="font-size: 15px">
                                <td style="line-height: 55px; text-align: center">@item.SinhVien.MSV</td>
                                <td style="line-height: 55px">@item.SinhVien.Ho</td>
                                <td style="line-height: 55px">@item.SinhVien.Ten</td>
                                <td style="line-height: 55px">@item.SinhVien.NgaySinh.ToString().Split(' ')[0]</td>
                                <td>
                                    @{
                                        string tmp = "";
                                        if (item.TrangThai == 0)
                                        {
                                            tmp = "Vắng";
                                        }
                                        else
                                        {
                                            tmp = "Hiện diện";
                                        }
                                    }
                                    <button type="button" style="width: 95px; margin-top: 8px" class="btn-active btn btn-outline-dark" aria-pressed="false" autocomplete="off" data-id="@item.ID">@tmp</button>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
        <!-- End PAge Content -->
    </div>
    <!-- End Container fluid  -->
</div>
@*<script src='~/CustomLib/Schedule/lib/jquery.min.js'></script>*@
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script>
    var editor = {
        init: function () {
            editor.registerEvents();
        },
        registerEvents: function () {
            $('.btn-active').off('click').on('click', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = btn.data('id');
                $.ajax({
                    url: "/Lecturer/EditAtd",
                    data: { id: id },
                    dataType: "json",
                    type: "POST",
                    success: function (response) {
                        console.log(response);
                        if (response.status == 0) {
                            btn.text('Vắng').addClass(' btn btn-outline-danger');
                        }
                        else {
                            btn.text('Hiện diện').addClass(' btn btn-outline-primary');
                        }
                    }
                });
            });
        }
    }
    editor.init();
</script>
