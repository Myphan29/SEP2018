                //console.log('removed');
                $('.hovaten').removeClass('hideelement');
                $('.hovaten').val('');
                $('.zzz').removeClass('hideelement');

            }
            else if ($(this).is(':checked') && $(this).val() == 2) {
                //console.log('added');
                $('.hovaten').addClass('hideelement');
                $('.hovaten').val('');
                $('.zzz').addClass('hideelement');
            }
        })              
</script>