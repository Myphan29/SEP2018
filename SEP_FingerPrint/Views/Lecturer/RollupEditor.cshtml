@model IEnumerable<SEP_FingerPrint.Models.DiemDanh>
@{
    ViewBag.Title = "RollupEditor";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["ID"] == null)
    {
        Response.Redirect("~/Home/Login");
    }
}
<head>
    <script src='~/CustomLib/Schedule/lib/jquery.min.js'></script>
</head>
@section jsFooter{
    <script src="~/CustomLib/Attendance/rollup_ext.js"></script>
}
    <div class="page-wrapper">
        <!-- Bread crumb -->
        <div class="row page-titles">
            <div class="col-md-5 align-self-center">
                <h3 class="text-primary">Attendance edit</h3>
                
            </div>
            <div class="col-md-7 align-self-center">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                    <li class="breadcrumb-item active">...</li>
                    <li class="breadcrumb-item active">...</li>
                </ol>
            </div>
        </div>
        <!-- End Bread crumb -->
        <!-- Container fluid  -->
        <div class="container-fluid">
            <!-- Start Page Content -->
            <div class="row">
                <!-- /# column -->
                <div class="col-lg-12">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Tên</th>
                                <th>Họ</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>


                        @foreach (var item in Model)
                        {
                            string tmp = "";
                            if (item.TrangThai == 0)
                            {
                                tmp = "Vắng";
                            }
                            else
                            {
                                tmp = "Hiện diện";
                            }
                            <tr>
                                <td>@item.SinhVien.Ten</td>
                                <td>@item.SinhVien.Ho</td>
                                <td>
                                    <button type="button" class="btn-active btn btn-outline-primary" aria-pressed="false" autocomplete="off" data-id="@item.SinhVien.MSV">@tmp</button>
                                </td>
                            </tr>
                         }

                    </table>
                </div>
            </div>
            <!-- End PAge Content -->
        </div>
        <!-- End Container fluid  -->
    </div>
            