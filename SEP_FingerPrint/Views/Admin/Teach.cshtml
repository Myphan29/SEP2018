@model PagedList.IPagedList<SEP_FingerPrint.Models.KhoaHoc>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Teach";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["ID"] == null)
    {
        Response.Redirect("~/Home/Login");
    }
}
<head>
    <meta name="viewport" content="width=device-width" />
    @*<link href="~/Content/bootstrap.css" rel="stylesheet" />*@
    <link href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.0/semantic.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.10.16/css/dataTables.semanticui.min.css" rel="stylesheet" />
    <style>
        tbody tr td {
            color: black;
        }
    </style>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.semanticui.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.0/semantic.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#listGV').DataTable();
        });
    </script>
    <link href='~/CustomLib/css/account.css' rel='stylesheet' />
    @*<script src="~/CustomLib/js/lib/jquery/jquery.min.js"></script>*@
    
</head>
    <!-- Bread crumb -->
    <div class="page-wrapper">
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-primary">Khóa học</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Trang chủ</a></li>
                <li class="breadcrumb-item active">Khóa học</li>
            </ol>
        </div>
    </div>
    <!-- End Bread crumb -->
    <!-- Container fluid  -->
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row">
            <!-- /# column -->
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-title">
                        <h4>Danh sách giảng viên</h4>
                    </div>
                    @*<div class="card-body">*@
                    <div class="table-responsive" style="padding: 20px">
                        <table id="listGV" class="table table-hover ">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên Giảng Viên</th>
                                    <th>Tên môn học</th>
                                    <th>Mô tả</th>
                                    <th>Misc.</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.MGV</td>
                                    <td>@item.GiangVien.HoTen</td>
                                    <td>@item.MonHoc.TenMonHoc</td>
                                    <td></td>                                    
                                    @*<td>
                                                                            
            <a href="/Lecturer/Attendance" role="button" class="btn btn-outline-success">Điểm danh</a>
            <a href="/Lecturer/Teach/@item.MGV" role="button" class="btn btn-outline-info">Thông tin</a>
        </td>*@
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End PAge Content -->
</div>

    <!-- End Container fluid  -->

