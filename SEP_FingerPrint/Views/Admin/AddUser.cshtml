@model SEP_FingerPrint.Models.Account
@{

    ViewBag.Title = "AddAcount";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["ID"] == null)
    {
        Response.Redirect("~/Home/Login");
    }
}


<link href='~/CustomLib/css/account.css' rel='stylesheet' />
<!-- Meta tag Keywords -->
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="keywords" content="Account Register Form Responsive Widget,Login form widgets, Sign up Web forms , Login signup Responsive web form,Flat Pricing table,Flat Drop downs,Registration Forms,News letter Forms,Elements" />
<script src="~/CustomLib/js/lib/jquery/jquery.min.js"></script>
<!-- Style-CSS -->
<link rel="stylesheet" href="css/font-awesome.css">
<!-- Font-Awesome-Icons-CSS -->
<link href="//fonts.googleapis.com/css?family=Noto+Sans:400,400i,700,700i&amp;subset=cyrillic,cyrillic-ext,devanagari,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">


<div class="page-wrapper">
    <!-- Bread crumb -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-primary">Thêm tài khoản</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Trang chủ</a></li>
                <li class="breadcrumb-item active">Thêm tài khoản</li>
            </ol>
        </div>
    </div>
    <!-- End Bread crumb -->
    <!-- Container fluid  -->
    <div class="container-fluid">
        <div class="header-main">
            <h2 style="text-align: center; width: 20% auto" id="myHeader">Thêm tài khoản</h2>
            <div class="header-bottom">
                <div class="header-right w3agile" style="width: auto ">
                    <div class="header-left-bottom agileinfo">
                        <form action="#" method="post">
                            @Html.AntiForgeryToken()
                            @*@Html.ValidationSummary(false, "", new { @class = "text-danger" })*@
                            <div class="icon1">
                                <i class="fa fa-user" id="myHeader" aria-hidden="true"></i>
                                @*<input type="text" placeholder="ID" name="fullname" required="" />*@
                                @Html.TextBoxFor(model => model.ID, new { placeholder = "ID", @class = "input100", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
                            </div>
                            <div class="icon1">
                                <i class="fa fa-cloud" id="myHeader" aria-hidden="true"></i>
                                @*<input type="text" placeholder="Họ và tên" name="fullname" required="" />*@
                                @Html.TextBoxFor(model => model.TenTK, new { placeholder = "Nhập Họ tên", @class = "input100", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.TenTK, "", new { @class = "text-danger" })
                            </div>
                            <div class="icon1">
                                <i class="fa fa-lock" id="myHeader" aria-hidden="true"></i>
                                @*<input type="password" placeholder="Mật khẩu" name="password" required="" />*@
                                @Html.PasswordFor(model => model.matkhau, new { placeholder = "Nhập mật khẩu", @class = "input100", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.matkhau, "", new { @class = "text-danger" })
                            </div>
                            <div class="icon1">
                                <i class="fa fa-lock" id="myHeader" aria-hidden="true"></i>
                                @*<input type="password" placeholder="Nhập lại mật khẩu" name="password" required="" />*@
                                @Html.PasswordFor(model => model.nhaplaimatkhau, new { placeholder = "Nhập lại mật khẩu", @class = "input100", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.nhaplaimatkhau, "", new { @class = "text-danger" })
                            </div>
                            <div class="icon1" style="padding: 20px 0 0 70px; font-size: 15px">
                                <i class="fa fa-key" id="myHeader" aria-hidden="true"></i>
                                @*<input type="radio" name="colors" id="red">*@
                                @Html.RadioButtonFor(model => model.Trangthai, "Enable")
                                Kích hoạt
                                @*<input type="radio" name="colors" id="red" style="margin-left: 30px">*@
                                @Html.RadioButtonFor(model => model.Trangthai, "Disable")
                                Chưa kích hoạt
                                <br>
                                @Html.ValidationMessageFor(model => model.Trangthai, "", new { @class = "text-danger" })
                            </div>
                            <div class="icon1" style="padding: 20px 0 0 70px ; font-size: 15px">
                                <i class="fa fa-heart-o" id="myHeader" aria-hidden="true" style="margin-right: 10px"></i>
                                Vai trò:
                                @*<select style="margin-left: 30px; font-size: 16px">
                                        <option value="volvo">Giảng viên</option>
                                    </select>*@
                                @Html.RadioButtonFor(model => model.Vaitro, 1)
                                Giảng viên
                                @Html.RadioButtonFor(model => model.Vaitro, 2)
                                Giáo vụ
                                <br>
                                @Html.ValidationMessageFor(model => model.Vaitro, "", new { @class = "text-danger" })
                            </div>
                            <div class="icon1" style="text-align: center">

                                <div class="bottom" style="text-align: center">
                                    <input type="submit" id="button" value="Thêm" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 
       
