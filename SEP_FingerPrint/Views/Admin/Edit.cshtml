@model IEnumerable<SEP_FingerPrint.Models.TaiKhoan>

@{
    ViewBag.Title = "Edit";
}
<head>
    <script src='~/CustomLib/Schedule/lib/jquery.min.js'></script>
</head>
@section jsFooter{
    <script src="/CustomLib/js/user.js"></script>
}
    <div class="page-wrapper">
        <div class="panel panel-default">
            <div class="row page-titles">
                <div class="col-md-5 align-self-center">
                    <h3 class="text-primary">User</h3>
                </div>
                <div class="col-md-7 align-self-center">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="javascript:void(0)">Trang chủ</a></li>
                        <li class="breadcrumb-item active">User</li>
                    </ol>
                </div>
            </div>
     
                @using (Html.BeginForm("Index", "User", FormMethod.Get))
        {
            <div class="row form-group">
                
                    <div class="col-md-4">
                        <input type="text" value="@ViewBag.SearchString" class="form-control" name="searchString" />
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-success">Tìm kiếm</button>
                        <a class="btn btn-primary" href="/Admin/AddUser">Thêm mới</a>
                    </div>
                
            </div>
}
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                
                                <th>Tài khoản</th>
                                <th>Vai trò</th>
                                <th>Trạng thái</th>
                            </tr>
                        </thead>


                        @foreach (var item in Model)
                {
                    <tr>
                        
                        <td>@item.TenTK</td>
                        <td>
                            @{ if (item.Vaitro == 1)
                        {
                            @Html.DisplayName("Giảng Viên")
                }
                if (item.Vaitro == 2)
                {
                    @Html.DisplayName("Admin")
        }
                            }
                        </td>
                        <td><a href="#" class="btn-active" data-id="@item.ID">@item.Trangthai</a></td>
                    </tr>
        }

                    </table>
                </div>
            </div>
        </div>
        
