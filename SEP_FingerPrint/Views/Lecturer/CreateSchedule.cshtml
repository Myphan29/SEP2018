<script>
    $(document).ready(function () {
        var date_input = $('input[name="date"]'); //our date input has the name "date"
        var container = $('.bootstrap-iso form').length > 0 ? $('.bootstrap-iso form').parent() : "body";
        var options = {
            format: 'mm/dd/yyyy',
            container: container,
            todayHighlight: true,
            multidate: true
        };
        date_input.datepicker(options);
    });
    $(document).ready(function () {
        $('select').niceSelect();
        
        $("ul.daysOfWeekButton-group li").click(function (e) {
            $(function () {
                $(".btn").on('click', function (e) {
                    e.preventDefault();
                    $(this).closest('.aitem').remove();
                });
            });
            $(".xItem").append('<div class="aitem"><ul class="req1">'
                + '<li style="width: 100px"><p style="display: inline-block;">' + $(this).text() + '</p></li>'
                + '&nbsp;&nbsp;&nbsp;<li style="width: 200px"><input data-role="timepicker" data-distance="2" data-seconds="false"></li>'
                + '&nbsp;&nbsp;&nbsp;<li><a class="btn"><i class="fa fa-close"></i></a></li>'
                + '</ul>'
                + '</div>');
            //alert($(this).find("a.button").text());
        });
    });
    $(function () {
        $('input[name="daterange"]').daterangepicker({
            opens: 'right'
        }, function (start, end, label) {
            console.log("A new date selection was made: " + start.format('DD-MM-YYYY') + ' to ' + end.format('DD-MM-YYYY'));
        });
    });
    function createSchedule() {
        var x = document.getElementById("gettingStartSetupSchedule");
        x.style.display = "block";
    };


</script>
