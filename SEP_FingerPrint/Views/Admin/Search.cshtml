@model IEnumerable<SEP_FingerPrint.Models.GiangVien>
@{
    ViewBag.Title = "Search";
}

<h2>Search</h2>

<head>
    <script src='~/CustomLib/Schedule/lib/jquery.min.js'></script>
</head>
@section jsFooter{
    <script src="/CustomLib/js/user.js"></script>
}
<div class="page-wrapper">

    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-primary">User</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Trang chủ</a></li>
                <li class="breadcrumb-item active">User</li>
            </ol>
        </div>
    </div>


    <div class="col-md-4">
        <form role="search" action="@Url.Action("Search","Admin")" method="get">
            <div class="form-group" id="Search">
                <h3><input type="text" class="form-control" placeholder="Search" name="text"></h3>
            </div>
            <h3>
                <button type="submit" class="btn btn-success" id="SubmitSearch">Tìm Kiếm</button>
                <a class="btn btn-primary" href="/Admin/AddUser">Thêm mới</a>
            </h3>
        </form>
    </div>

    <div class="col-md-12 align-self-auto">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Tài khoản</th>
                        <th>Tên</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>


                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.TaiKhoan.TenTK</td>
                        <td>@item.HoTen</td>
                        <td><a href="#" class="btn-active" data-id="@item.TaiKhoan.ID">@item.TaiKhoan.Trangthai</a></td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>