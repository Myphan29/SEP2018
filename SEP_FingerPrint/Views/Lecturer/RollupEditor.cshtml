@model IEnumerable<SEP_FingerPrint.Models.DiemDanh>
@{
    ViewBag.Title = "RollupEditor";
    Layout = "~/Views/Shared/_Layout.cshtml";

    if (Session["ID"] == null)
    {
        Response.Redirect("~/Home/Login");
    }
}
<head>

</head>
<div class="page-wrapper">
    <!-- Bread crumb -->
    <select style="display: none" id="timeHolder">
        @{
            SEP_FingerPrint.Models.Sep2018Entities bird = new SEP_FingerPrint.Models.Sep2018Entities();
            var rifle = bird.BuoiHocs.ToList();
            foreach (var bullet in rifle)
            {
                <option>@bullet.MBH</option>
            }
        }
    </select>
    <select style="display: none" id="timeHolder2">
        @{
            SEP_FingerPrint.Models.Sep2018Entities bird2 = new SEP_FingerPrint.Models.Sep2018Entities();
            var rifle2 = bird2.BuoiHocs.ToList();
            foreach (var bullet in rifle2)
            {
                <option>@bullet.MKH</option>
            }
        }
    </select>
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-primary">Attendance edit</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Home</a></li>
                <li class="breadcrumb-item active">...</li>
                <li class="breadcrumb-item active">...</li>
            </ol>
        </div>
    </div>
    <!-- End Bread crumb -->
    <!-- Container fluid  -->
    <div class="container-fluid">
        <!-- Start Page Content -->
        <div class="row">
            <!-- /# column -->
            <div class="col-lg-12">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>MSV</th>
                            <th>Họ</th>
                            <th>Tên</th>
                            <th>Ngày sinh</th>
                            <th>Trạng thái</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                      
                        string tmp = "";
                        if (item.TrangThai == 0)
                        {
                            tmp = "Vắng";
                        }
                        else
                        {
                            tmp = "Hiện diện";
                        }
                            <tr>
                                <td>@item.SinhVien.MSV</td>
                                <td>@item.SinhVien.Ho</td>
                                <td>@item.SinhVien.Ten</td>
                                <td>@item.SinhVien.NgaySinh.ToString().Split(' ')[0]</td>
                                <td>
                                    <button type="button" class="btn-active btn btn-outline-primary" aria-pressed="false" autocomplete="off" data-id="@item.ID">@tmp</button>
                                </td>
                            </tr>
                    }
                </table>
            </div>
        </div>
        <!-- End PAge Content -->
    </div>
    <!-- End Container fluid  -->
</div>
<script src='~/CustomLib/Schedule/lib/jquery.min.js'></script>


<script>
    var time = $("#timeHolder").val();
    var time2 = $("#timeHolder2").val();
    var editor = {
        init: function () {
            editor.registerEvents();
        },
        registerEvents: function () {
            $('.btn-active').off('click').on('click', function (e) {
                e.preventDefault();
                var btn = $(this);
                var id = btn.data('id');
                $.ajax({
                    url: "/Lecturer/EditAtd", /*+ time2 + "/" + time*/
                    data: { id: id },
                    dataType: "json",
                    type: "POST",
                    success: function (response) {
                        console.log(response);
                        if (response.status == 0) {
                            btn.text('Vắng');
                        }
                        else {
                            btn.text('Hiện diện');
                        }
                    }
                });
            });
        }
    }
    editor.init();
</script>
