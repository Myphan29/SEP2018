@model SEP_FingerPrint.Models.Account
@{

    ViewBag.Title = "AddAcount";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["ID"] == null)
    {
        Response.Redirect("~/Home/Login");
    }
}
<script>
    function KdzOn() {
        var x = document.getElementById("mvlsRadioButton1");
        x.style.display = "block";
        var m = document.getElementById("mvlsRadioButton2");
        m.style.display = "block";
    }
    function KdzOff() {
        var x = document.getElementById("mvlsRadioButton1");
        var m = document.getElementById("mvlsRadioButton2");
        if ($('#chkd').is(':checked')) {
            x.style.display = "none";
            m.style.display = "none";
            $("#mvlsRadioButton1").children().prop('disabled', true);
            $("#mvlsRadioButton2").children().prop('disabled', true);
        }
    }
</script>

<link href='~/CustomLib/css/account.css' rel='stylesheet' />
<!-- Meta tag Keywords -->
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta name="keywords" content="Account Register Form Responsive Widget,Login form widgets, Sign up Web forms , Login signup Responsive web form,Flat Pricing table,Flat Drop downs,Registration Forms,News letter Forms,Elements" />
<script src="~/CustomLib/js/lib/jquery/jquery.min.js"></script>
<!-- Style-CSS -->
<link rel="stylesheet" href="css/font-awesome.css">
<!-- Font-Awesome-Icons-CSS -->
<link href="//fonts.googleapis.com/css?family=Noto+Sans:400,400i,700,700i&amp;subset=cyrillic,cyrillic-ext,devanagari,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
<link href="~/CustomLib/css/style.css" rel="stylesheet" />

<div class="page-wrapper">
    <!-- Bread crumb -->
    <div class="row page-titles">
        <div class="col-md-5 align-self-center">
            <h3 class="text-primary">Thêm tài khoản</h3>
        </div>
        <div class="col-md-7 align-self-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="javascript:void(0)">Trang chủ</a></li>
                <li class="breadcrumb-item active">Thêm tài khoản</li>
            </ol>
        </div>
    </div>
    <!-- End Bread crumb -->
    <!-- Container fluid  -->
    <div class="container-fluid">
        <div class="col-lg-4">
            <div class="card">
                <form action="#" method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    @if (ViewBag.SuccessMessage != null)
                    {
                        <div class="alert alert-success">@ViewBag.SuccessMessage</div>
                    }
                    <div id="mvls-block-def">
                        <ul>
                            <li style="width: 20px"><i class="fa fa-heart" id="myHeader" aria-hidden="true"></i></li>
                            <li style="font-size: 15px">
                                Vai trò:
                                <a style="margin-left: 23px">@Html.RadioButtonFor(model => model.Vaitro, 1, new { Checked = "checked", @onClick = "KdzOn()"})</a>
                                Giảng viên
                                &nbsp;
                                <a>@Html.RadioButtonFor(model => model.Vaitro, 2, new { id = "chkd" ,@onClick = "KdzOff()" })</a>
                                Giáo vụ
                            </li>
                        </ul>
                        <br />
                        <ul>
                            <li style="width: 20px"><i class="fa fa-cogs" id="myHeader" aria-hidden="true"></i></li>
                            <li style="font-size: 15px">
                                Trạng thái:
                                @Html.RadioButtonFor(model => model.Trangthai, "Enable")
                                Enable
                                &nbsp;
                                @Html.RadioButtonFor(model => model.Trangthai, "Disable")
                                Disable
                                <br>
                                @Html.ValidationMessageFor(model => model.Trangthai, "", new { @class = "text-danger" })
                            </li>
                        </ul>
                    </div>
                    <hr />
                    <div id="mvls-block-def">
                        <ul id="mvlsRadioButton1">
                            <li style="width: 20px"><i class="ti ti-id-badge" id="" aria-hidden="true"></i></li>
                            <li class="form-group">
                                @Html.TextBoxFor(model => model.MGV, new { placeholder = "Mã giảng viên", @class = "form-control", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.MGV, "", new { @class = "text-danger" })
                            </li>
                        </ul>
                        <ul id="mvlsRadioButton2">
                            <li style="width: 20px"><i class="ti ti-user" id="" aria-hidden="true"></i></li>
                            <li class="form-group">
                                @Html.TextBoxFor(model => model.HoTen, new { placeholder = "Họ tên giảng viên", @class = "form-control", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                            </li>
                        </ul>

                        <ul>
                            <li style="width: 20px"><i class="fa fa-user" id="" aria-hidden="true"></i></li>
                            <li class="form-group">
                                @Html.TextBoxFor(model => model.TenTK, new { placeholder = "Tên đăng nhập", @class = "form-control", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.TenTK, "", new { @class = "text-danger" })
                            </li>
                        </ul>
                        <ul>
                            <li style="width: 20px"><i class="fa fa-key" id="" aria-hidden="true"></i></li>
                            <li class="form-group">
                                @Html.PasswordFor(model => model.matkhau, new { placeholder = "Nhập mật khẩu", @class = "form-control", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.matkhau, "", new { @class = "text-danger" })
                            </li>
                        </ul>
                        <ul>
                            <li style="width: 20px"><i class="fa fa-refresh" id="" aria-hidden="true"></i></li>
                            <li class="form-group">
                                @Html.PasswordFor(model => model.nhaplaimatkhau, new { placeholder = "Nhập lại mật khẩu", @class = "form-control", @autofocus = "autofocus" })
                                @Html.ValidationMessageFor(model => model.nhaplaimatkhau, "", new { @class = "text-danger" })
                            </li>
                        </ul>
                    </div>
                    @* SAVE CHANGE BUTTON *@
                    <div style="text-align: center">
                        <input type="submit" class="btn btn-info btn-rounded" value="Thêm" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

